# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and configure your values
# This file supports both development and production modes

# ============================================================================
# APPLICATION MODE
# ============================================================================
# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug mode (development only)
DEBUG=true

# ============================================================================
# SUPABASE CONFIGURATION (Primary Database)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
# Memory limit: 256mb for development, 1gb+ for production
REDIS_MAX_MEMORY=256mb

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
HOST=0.0.0.0
PORT=8000
# Workers: 1 for development, 8+ for production
WORKERS=1
# Enable metrics: false for development, true for production
ENABLE_METRICS=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# ============================================================================
# GOOGLE APIS CONFIGURATION
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_LOGIN_REDIRECT_URI=http://localhost:3000/oauth-login-callback

# ============================================================================
# PINECONE CONFIGURATION
# ============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=besunny-documents

# ============================================================================
# INTEGRATION SERVICES
# ============================================================================
N8N_CLASSIFICATION_WEBHOOK_URL=https://your-n8n-instance.com/webhook/classification
N8N_API_KEY=your-n8n-api-key
ATTENDEE_API_KEY=your-attendee-api-key
ATTENDEE_BASE_URL=https://app.attendee.dev
VIRTUAL_EMAIL_DOMAIN=virtual.besunny.ai

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
EMAIL_PROCESSING_BATCH_SIZE=100
EMAIL_PROCESSING_TIMEOUT=300
DRIVE_WEBHOOK_TIMEOUT=60
DRIVE_POLLING_INTERVAL=300
CALENDAR_WEBHOOK_TIMEOUT=60
CALENDAR_SYNC_INTERVAL=600
WEBHOOK_BASE_URL=http://localhost:8000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# MONITORING CONFIGURATION (Production Only)
# ============================================================================
METRICS_PORT=9090
GRAFANA_PASSWORD=admin

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# Uncomment and set these for production deployment
# ENVIRONMENT=production
# DEBUG=false
# WORKERS=8
# ENABLE_METRICS=true
# REDIS_MAX_MEMORY=1gb
# CORS_ORIGINS=https://yourdomain.com
# GOOGLE_LOGIN_REDIRECT_URI=https://yourdomain.com/oauth-login-callback
