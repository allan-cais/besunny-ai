# Application Configuration
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/besunny
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0

# Security Configuration
SECRET_KEY=your-secret-key-here-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Google APIs Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PROJECT_ID=your-google-project-id

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=besunny-documents

# N8N Integration
N8N_CLASSIFICATION_WEBHOOK_URL=https://your-n8n-instance.com/webhook/classification
N8N_API_KEY=your-n8n-api-key

# Attendee Integration
ATTENDEE_API_KEY=your-attendee-api-key
ATTENDEE_BASE_URL=https://app.attendee.dev

# Email Processing Configuration
EMAIL_PROCESSING_BATCH_SIZE=100
EMAIL_PROCESSING_TIMEOUT=300

# Drive Monitoring Configuration
DRIVE_WEBHOOK_TIMEOUT=60
DRIVE_POLLING_INTERVAL=300

# Calendar Integration Configuration
CALENDAR_WEBHOOK_TIMEOUT=60
CALENDAR_SYNC_INTERVAL=600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
