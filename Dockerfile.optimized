# Optimized multi-service Dockerfile for BeSunny.ai
# Target: Under 4GB for Railway compatibility

# Frontend build stage
FROM node:18-alpine AS frontend-builder

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install only production dependencies
RUN npm ci --only=production

# Copy source and build
COPY . .
RUN npm run build:production

# Clean up node_modules to save space
RUN rm -rf node_modules

# Backend stage with minimal Python image
FROM python:3.11-alpine

WORKDIR /app

# Install only essential system packages
RUN apk add --no-cache \
    gcc \
    musl-dev \
    libffi-dev \
    && rm -rf /var/cache/apk/*

# Copy requirements and install Python dependencies
COPY backend/requirements-simple.txt .
RUN pip install --no-cache-dir -r requirements-simple.txt

# Clean up pip cache
RUN rm -rf ~/.cache/pip

# Copy backend code
COPY backend/ .

# Copy built frontend (much smaller now)
COPY --from=frontend-builder /app/dist ./app/static

# Expose port
EXPOSE 8000

# Start the backend
CMD ["python", "start.py"]
