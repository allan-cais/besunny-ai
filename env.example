# Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Python Backend Configuration (Optional - for Phase 1 integration)
VITE_PYTHON_BACKEND_URL=http://localhost:8000
VITE_PYTHON_BACKEND_TIMEOUT=30000
VITE_PYTHON_BACKEND_RETRIES=3
VITE_PYTHON_BACKEND_RETRY_DELAY=1000
VITE_ENABLE_PYTHON_BACKEND=true

# N8N Integration (Legacy - replaced by Python backend)
# VITE_N8N_WEBHOOK_URL=https://n8n.customaistudio.io/webhook/kirit-rag-webhook

# AI API Keys (Optional - for future AI features)
VITE_OPENAI_API_KEY=sk-your-openai-api-key
VITE_ANTHROPIC_API_KEY=your-anthropic-api-key

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Polling Configuration
VITE_POLLING_INTERVAL_MS=30000
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY_MS=1000

# UI Limits
VITE_MAX_DOCUMENTS_PER_PAGE=50
VITE_MAX_MEETINGS_PER_PAGE=100
VITE_MAX_CHAT_MESSAGES_PER_PAGE=100

# Google OAuth (if using Google services)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google APIs Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_LOGIN_REDIRECT_URI=https://your-domain.com/oauth-login-callback
