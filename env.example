# BeSunny.ai Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# ESSENTIAL CONFIGURATION
# ============================================================================

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Python Backend Configuration (Required for full functionality)
VITE_PYTHON_BACKEND_URL=http://localhost:8000
VITE_ENABLE_PYTHON_BACKEND=true

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================

# OpenAI API Key (Required for AI features)
VITE_OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================================================
# GOOGLE INTEGRATION
# ============================================================================

# Google OAuth (Required for Google services)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_LOGIN_REDIRECT_URI=https://your-domain.com/oauth-login-callback

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Backend Settings
APP_NAME=BeSunny.ai Backend
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false

# Database (Optional - for advanced features)
DATABASE_URL=postgresql+asyncpg://user:pass@localhost/dbname
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Polling Configuration
VITE_POLLING_INTERVAL_MS=30000
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY_MS=1000

# UI Limits
VITE_MAX_DOCUMENTS_PER_PAGE=50
VITE_MAX_MEETINGS_PER_PAGE=100
VITE_MAX_CHAT_MESSAGES_PER_PAGE=100

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Railway/Production
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_SERVICE_ID=your-railway-service-id

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=300
